<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/collection_item">

    <TextView
        android:id="@+id/item_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:textSize="18sp"
        tools:text="@tools:sample/date/mmddyy" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/happy"
        android:contentDescription="@string/smiling_face"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/fruit"
        android:contentDescription="@string/fruit"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/fruitandveg1"
        android:contentDescription="@string/fruitandveg"/>

    <Button
        android:id="@+id/add_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="top|end"
        android:layout_weight="0.5"
        android:background="@drawable/ic_baseline_add_24"/>

    <Button
        android:id="@+id/remove_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="top|end"
        android:layout_weight="0.5"
        android:shadowColor="blue"
        android:background="@drawable/ic_cancel_button_red"/>


</LinearLayout>